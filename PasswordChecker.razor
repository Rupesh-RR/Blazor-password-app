@page "/"
@page "/password-checker"
@using BlazorApp5.Services
@inject IValidationService ValidationService
@rendermode InteractiveServer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Password Strength Checker</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="passwordInput">Enter your password:</label>
                        <input @bind="PasswordValue" @bind:event="oninput" 
                               type="password" 
                               class="form-control" 
                               id="passwordInput" 
                               placeholder="Type your password here" />
                    </div>
                    
                    @if (!string.IsNullOrEmpty(PasswordValue))
                    {
                        <div class="mt-3">
                            @if (isStrong)
                            {
                                <div class="alert alert-success">
                                    <strong>✓ Strong Password!</strong>
                                    <p class="mb-0">Your password meets all security requirements.</p>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    <strong>✗ Weak Password</strong>
                                    @if (errors.Any())
                                    {
                                        <ul class="mb-0 mt-2">
                                            @foreach (var error in errors)
                                            {
                                                <li>@error</li>
                                            }
                                        </ul>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isStrong = false;
    private List<string> errors = new List<string>();

    private string PasswordValue
    {
        get => _passwordValue;
        set
        {
            _passwordValue = value;
            CheckPasswordStrength();
        }
    }
    private string _passwordValue = string.Empty;

    private void CheckPasswordStrength()
    {
        if (string.IsNullOrEmpty(PasswordValue))
        {
            isStrong = false;
            errors.Clear();
            return;
        }

        isStrong = ValidationService.IsPasswordStrong(PasswordValue);
        errors = ValidationService.GetPasswordErrors(PasswordValue);
        StateHasChanged();
    }
}